<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffffff"
    tools:context="com.example.farhan.excersie.history">



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top">

    </TableLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Muscle Group:"
            android:id="@+id/textView5"
            android:layout_column="0"
            android:textColor="#000000"
            android:layout_row="0" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:id="@+id/mgroup"
            android:layout_column="0"
            android:layout_row="1"
            android:spinnerMode="dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Workout:"
            android:id="@+id/textView10"
            android:layout_column="0"
            android:textColor="#000000"
            android:layout_row="2" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:id="@+id/workout"
            android:layout_column="0"
            android:layout_row="3"
            android:spinnerMode="dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Year:"
            android:id="@+id/textView12"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="#000000"
            android:visibility="gone" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:id="@+id/spinner_year"
            android:layout_row="5"
            android:layout_column="0"
            android:spinnerMode="dialog"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Month:"
            android:id="@+id/textView13"
            android:layout_row="6"
            android:layout_column="0"
            android:textColor="#000000"
            android:visibility="gone" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:id="@+id/spinner_month"
            android:layout_row="7"
            android:layout_column="0"
            android:spinnerMode="dialog"
            android:visibility="gone" />

        <com.jjoe64.graphview.GraphView
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:id="@+id/graph"
            android:layout_column="0"
            android:layout_span="2"
            android:layout_row="8"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Error: No history found for the selected workout, please select another workout."
            android:id="@+id/textView14"
            android:layout_row="9"
            android:layout_column="0"
            android:visibility="gone"
            android:textColor="#FF0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Error: No history found for the selected month, please select another month."
            android:id="@+id/textView15"
            android:layout_row="9"
            android:layout_column="0"
            android:visibility="gone"
            android:textColor="#FF0000" />
    </GridLayout>
</RelativeLayout>
