<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.farhan.excersie.configure_exercises"
    android:background="#FF3997E6">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_start_workout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout8"
        android:layout_row="13"
        android:layout_column="2"
        android:focusable="false"
        android:theme="@android:style/Theme.Light">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff3997e6">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/day_week_text"
                    android:layout_column="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#FF3997E6">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abdominals"
                    android:id="@+id/cb_abs"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:checked="false"
                    android:textSize="25dp"
                    android:singleLine="false"
                    android:clickable="true"
                    android:elegantTextHeight="false"
                    android:enabled="true"
                    android:layout_gravity="center_vertical"
                    android:background="#FF3997E6" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#FF3997E6">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arms"
                    android:id="@+id/cb_arms"
                    android:layout_row="9"
                    android:layout_column="1"
                    android:checked="false"
                    android:textSize="25dp"
                    android:singleLine="false"
                    android:clickable="true"
                    android:elegantTextHeight="false"
                    android:enabled="true"
                    android:layout_gravity="center_vertical"
                    android:background="#FF3997E6" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF3997E6"
                android:layout_margin="2dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shoulders"
                    android:id="@+id/cb_shoulders"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:checked="false"
                    android:textSize="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="#FF3997E6" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF3997E6"
                android:layout_margin="2dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:id="@+id/cb_back"
                    android:layout_row="7"
                    android:layout_column="1"
                    android:checked="false"
                    android:textSize="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="#FF3997E6" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF3997E6"
                android:layout_margin="2dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chest"
                    android:id="@+id/cb_chest"
                    android:layout_row="8"
                    android:layout_column="1"
                    android:checked="false"
                     android:textSize="25dp"
                     android:layout_gravity="center_vertical"
                    android:background="#FF3997E6" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF3997E6"
                android:layout_margin="2dp">

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF3997E6"
                android:layout_margin="2dp">

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF3997E6"
                android:layout_margin="2dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Legs"
                    android:id="@+id/cb_legs"
                    android:layout_row="11"
                    android:layout_column="1"
                    android:checked="false"
                    android:textSize="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="#FF3997E6" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>



        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="2" /><![CDATA[





        android:layout_column="2" />





    ]]>
    </GridLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biceps"
        android:id="@+id/cb_biceps"
        android:layout_row="9"
        android:layout_column="1"
        android:checked="false"
        android:textSize="25dp"
        android:layout_gravity="center_vertical"
        android:background="#FF3997E6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Triceps"
        android:id="@+id/cb_triceps"
        android:layout_row="10"
        android:layout_column="1"
        android:checked="false"
        android:textSize="25dp"
        android:layout_gravity="center_vertical"
        android:background="#FF3997E6"
        android:layout_above="@+id/cb_biceps"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

</RelativeLayout>
