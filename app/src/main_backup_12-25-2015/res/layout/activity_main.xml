


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/main"
    android:background="#ffffffff">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:touchscreenBlocksFocus="true">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left|center_vertical"
            android:id="@+id/a"
            android:background="#fffffbff">

            <!-- basic button -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/day_of_Week"
                android:layout_row="0"
                android:layout_column="0" />

            <com.beardedhen.androidbootstrap.BootstrapButton

                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:text="Start Training"
                bootstrap:bootstrapSize="lg"

 bootstrap:bootstrapBrand="success"
                 bootstrap:roundedCorners="true" 
                android:textSize="30sp"
                android:layout_row="1"
                android:layout_column="0"
                android:id="@+id/button_start_workout" />

            <com.beardedhen.androidbootstrap.BootstrapButton

                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:text="Create Schedule"
                bootstrap:bootstrapSize="lg"

                android:textSize="30sp"
                   bootstrap:roundedCorners="true" 
        bootstrap:bootstrapBrand="warning"
                android:layout_row="2"
                android:id="@+id/button_setup_schedule"

                android:layout_column="0" />

            <com.beardedhen.androidbootstrap.BootstrapButton

                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:text="Exit Application"
                bootstrap:bootstrapSize="lg"

                 bootstrap:roundedCorners="true" 
                android:textSize="30sp"
                bootstrap:bootstrapBrand="danger"
                android:layout_row="4"
                android:id="@+id/exit"
                android:layout_column="0" />


            <com.beardedhen.androidbootstrap.BootstrapButton

                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:text="View History"
                  android:textSize="50sp"
                bootstrap:bootstrapSize="lg"
                 bootstrap:roundedCorners="true"
                bootstrap:bootstrapBrand="info"
                android:layout_row="3"
                android:layout_column="0"
                android:id="@+id/view_history" />


        </GridLayout>

    </FrameLayout>

</RelativeLayout>
