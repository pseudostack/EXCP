<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.farhan.excersie.Start_workout"
    android:touchscreenBlocksFocus="false">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/txt_mg1"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="left|top" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/txt_weekday"
                android:layout_row="0"
                android:layout_column="0"
                android:width="90dp"
                android:layout_gravity="left|top"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="439dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/txt_mg2"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="right|top" />

            <ListView
                android:layout_width="153dp"
                android:layout_height="291dp"
                android:id="@+id/exs1"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="bottom|top" />

            <ListView
                android:layout_width="153dp"
                android:layout_height="304dp"
                android:id="@+id/exs2"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="bottom|top" />

            <com.beardedhen.androidbootstrap.BootstrapButton

                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:text="Begin Workout"

                bootstrap:bootstrapBrand="success"
        bootstrap:roundedCorners="true"

                android:layout_row="25"
                android:layout_column="0"
                android:id="@+id/button_begin_training"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="141dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="224dp"
                android:layout_columnSpan="2" />

        </GridLayout>
    </FrameLayout>

</RelativeLayout>
